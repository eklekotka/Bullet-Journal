                     <Label fx:id="descriptionLabel" text="  Description: " textFill="#ff64f7">
                        <font>
                           <Font name="Edwardian Script ITC" size="24.0" />
                        </font>
                     </Label>
                     <TextArea fx:id="description" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="412.0" HBox.hgrow="ALWAYS" />
                  </children>
               </HBox>
               <HBox prefHeight="58.0" prefWidth="518.0">
                  <children>
                     <Label fx:id="dayChooseLabel" prefHeight="29.0" prefWidth="98.0" text="  Day:  " textFill="#ff65ea">
